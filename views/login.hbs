    </header>
    
    <main class="login-background">
        <section>
            <h3>LOGIN</h3>
            <form class="input-container" action="/dashboard" method="POST">
                <input type="text" name="username" placeholder="Username">
                <input type="password" name="password" placeholder="password">
                <div>
                    <button type="submit">SUBMIT</button>
                </div>
            </form>
        </section>

        <aside class="sidebar">
            <h3 class="padding-bottom-2">Filter opties</h3>

            <fieldset>
                <p>Leeftijd</p>
                <input class="age-slider" type="range" min="50" max="120" value="75">
                <div class="flex-space-between">
                    <p>50 jaar</p>
                    <p>120 jaar</p>
                </div>
            </fieldset>

            <fieldset>
                <p>Afstand</p>
                <input class="age-slider" type="range" min="0" max="200" value="0">
                <div class="flex-space-between">
                    <p>0 km</p>
                    <p>200 km</p>
                </div>
            </fieldset>

        </aside>

    </main>

